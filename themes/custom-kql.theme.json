{
  "name": "Custom KQL Theme",
  "type": "light",
  "colors": {
    "editor.background": "#DCDCDC", 
    "editor.foreground": "#000000",
    "editorLineNumber.foreground": "#808080", 
    "editorCursor.foreground": "#FFFFFF",
    "editor.selectionBackground": "#264F78", 
    "editorSuggestWidget.selectedBackground": "#004E8C"
  },
  "tokenColors": [
  {
    "scope": "query.operators.kusto",
    "settings": {
      "foreground": "#FF4500" // orangeRed
    }
  },
  {
    "scope": [
      "keyword.functions.kusto",
      "keyword.functions.datetime.kusto",
      "operator.table.kusto",
      "keyword.types.kusto"
    ],
    "settings": {
      "foreground": "#0000FF" // blue
    }
  },
  {
    "scope": "keyword.other.kusto",
    "settings": {
      "foreground": "#FFD700" // gold (as per your other rule)
    }
  },
  {
    "scope": ["operator.math.kusto", "punctuation.kusto"],
    "settings": {
      "foreground": "#000000" // black
    }
  },
  {
    "scope": "comment.kusto",
    "settings": {
      "foreground": "#008000" // green
    }
  },
  {
    "scope": "query.parameters.kusto",
    "settings": {
      "foreground": "#2B91AF" // tealBlue
    }
  },
  {
    "scope": ["string.quoted.double.kusto", "string.quoted.single.kusto"],
    "settings": {
      "foreground": "#B22222" // firebrick
    }
  },
  {
    "scope": ["variable.parameter.kusto", "variable.other.kusto"],
    "settings": {
      "foreground": "#FFD700" // gold (keeping this separate as well)
    }
  }
]
}